<% if @error %>
    <p style="color: red;">*<%= @error %>*</p>
<% end %>

<h1>Edit <%= @car.year %> <%= @car.make %> <%= @car.model %> <%= @car.color %></h1>
<form action="/cars/<%= @car.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    Year: <input type="text" name="year" value="<%= @car.year %>"><br>
    Make: <input type="text" name="make" value="<%= @car.make %>"><br>
    Model: <input type="text" name="model" value="<%= @car.model %>"><br>
    Color: <input type="text" name="color" value="<%= @car.color %>"><br>
    Parts: <textarea class="textarea" type="text" id="car_parts" name="parts" rows="4" cols="50"/><%= @car.parts%></textarea>
    <br><input type="submit" value="Update Car">
</form>
<br>
<form action="/cars/<%= @car.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" name="" value="Delete Car">
</form>